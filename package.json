{
  "name": "@kne/components-iconfont",
  "version": "0.1.0",
  "dependencies": {
    "@kne/react-fetch": "^1.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "npm run build:icon && cross-env PORT=3001 MODULES_DEV_PUBLIC_URL=/ craco start",
    "build:icon": "node scripts/build-icon.js",
    "build": "npm run build:icon && cross-env COMPONENTS_NAME=components-iconfont MODULES_DEV_PUBLIC_URL=/components-iconfont  craco build",
    "test": "craco test --coverage",
    "eject": "react-scripts eject",
    "init": "npm i --legacy-peer-deps",
    "create": "modules-dev-create",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@common/(.*)": "<rootDir>/src/common/$1",
      "^@components/(.*)": "<rootDir>/src/components/$1",
      "^@utils/(.*)": "<rootDir>/src/common/utils/$1"
    }
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@kne/craco-module-federation": "^1.1.1",
    "@kne/modules-dev": "^0.1.27",
    "@kne/remote-loader": "^1.2.3",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.1.1",
    "http-proxy-middleware": "^2.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "node-sass": "^7.0.1",
    "pinyin-pro": "^3.14.0",
    "prettier": "^2.7.1",
    "svgstore": "^3.0.1"
  }
}
